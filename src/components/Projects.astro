---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';

const projects = [
  {
    id: 'intelligent_production_planning',
    name: 'Intelligent Production Planning',
    description: 'Comparative analysis of traditional and AI-based methods for manufacturing optimization',
    extendedDescription: 'This research project conducts a systematic review and comparative analysis of optimization methods for manufacturing production planning, focusing on minimizing the makespan. It evaluates classical approaches, metaheuristic algorithms, and reinforcement learning techniques in a simulated industrial environment.',
    year: '2025',
    icon: 'lucide:factory',
    category: 'Research',
    image: '/projects/intelligent_production_planning/featured.png',
    tech: ['Python', 'PyTorch', 'NumPy', 'Matplotlib']
  },
  {
    id: 'maintenance_insights',
    name: 'Maintenance Insights Dashboard',
    description: 'Power BI dashboard for visualizing maintenance KPIs at Mondelez',
    extendedDescription: 'Developed during an internship at Mondelez, this Power BI dashboard connects to an Excel file on SharePoint to visualize key maintenance KPIs. It features interactive filters for date, production lines, and machines, along with visualizations like bar charts and line charts to analyze downtime trends and operational efficiency.',
    year: '2024',
    icon: 'lucide:bar-chart',
    category: 'Data Analytics',
    image: '/projects/maintenance_insights/featured.png',
    tech: ['Power BI', 'Excel', 'SharePoint']
  },
  {
    id: "spss_tutorial",
    name: "SPSS Tutorial for Data Analysis",
    description: "A comprehensive guide to data analysis using SPSS with a real-world dataset",
    extendedDescription: "This project involves creating a detailed tutorial on data analysis using SPSS, applied to the 'Machine Predictive Maintenance Classification' dataset, covering statistical techniques for educational purposes.",
    year: "2023",
    icon: "lucide:bar-chart",
    category: "Data Analytics",
    image: "/projects/spss_tutorial/featured.png",
    tech: ["SPSS", "Statistics"]
  },
  {
    id: "wastewater_automation",
    name: "Wastewater Treatment Automation",
    description: "Automation of wastewater treatment processes using RSView and RSLogix",
    extendedDescription: "Developed as part of an academic project at École Nationale des Sciences Appliquées de Marrakech, this project automates wastewater treatment processes. Using RSLogix for PLC programming and RSView for designing an interactive dashboard, the system monitors and controls tank levels, sludge accumulation, and alarms. It was a collaborative effort with team member Niama Abid.",
    year: "2022",
    icon: "lucide:droplet",
    category: "Automation",
    image: "/projects/wastewater_automation/featured.png",
    tech: ["RSLogix", "RSView"]
  },
];
---

<section id="projects" class="py-16 min-h-screen">
  <h2 class="text-3xl font-bold mb-8 text-foreground">Projects</h2>
  <div class="grid gap-8">
    {projects.map((project) => (
        <a href={`/projects/${project.id}`} class="group">
          <div class="border border-border rounded-3xl p-6 transition-all duration-300 hover:bg-muted/50 overflow-hidden">
            <div class="flex flex-col md:flex-row gap-6">
              <div class="md:w-1/3">
                <Image
                    src={project.image}
                    alt={`${project.name} project`}
                    width={100}
                    height={100}
                    transition:animate="fade"
                    transition:name={`project-${project.id}`}
                    class="w-full h-48 object-cover rounded-2xl"
                />
              </div>
              <div class="md:w-2/3">
                <div class="flex items-center justify-between mb-4">
                  <div class="flex items-center">
                    <div class="bg-primary/10 p-2 rounded-full mr-4" transition:name={`project-icon-${project.id}`}>
                      <Icon name={project.icon} class="w-6 h-6 text-primary" />
                    </div>
                    <h3 class="text-2xl font-semibold text-foreground" transition:name={`project-name-${project.id}`} >{project.name}</h3>
                  </div>
                  <span class="text-sm text-muted-foreground">{project.year}</span>
                </div>
                <p
                    class="text-muted-foreground mb-4"
                    transition:name={`project-desc-${project.id}`}
                >{project.extendedDescription}</p>
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.tech.map((tech) => (
                      <span class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm">{tech}</span>
                  ))}
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-primary">{project.category}</span>
                  <Icon name="lucide:arrow-right" class="w-5 h-5 text-primary opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                </div>
              </div>
            </div>
          </div>
        </a>
    ))}
  </div>
</section>